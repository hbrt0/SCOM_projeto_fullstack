# Copie para .env e ajuste os valores
NODE_ENV=development
PORT=3000

# URL do Postgres (use o docker-compose fornecido ou seu próprio banco)
DATABASE_URL=postgres://postgres:postgres@localhost:5432/scomdb

# Segredo de sessão
SESSION_SECRET=uma_string_aleatoria_grande_e_secreta

# HTTPS local (opcional). Se quiser ativar, gere chaves e aponte aqui.
HTTPS_ENABLED=false
HTTPS_KEY=./certs/key.pem
HTTPS_CERT=./certs/cert.pem
